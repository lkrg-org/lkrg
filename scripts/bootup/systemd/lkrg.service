[Unit]
Description=Linux Kernel Runtime Guard
After=basic.target
Before=network.target

[Service]
Type=simple
ExecStartPre=/sbin/modprobe p_lkrg log_level=3
ExecStart=/sbin/sysctl lkrg.clean_message=0
ExecStop=/sbin/rmmod p_lkrg
RemainAfterExit=yes
Restart=on-failure

[Install]
WantedBy=multi-user.target

